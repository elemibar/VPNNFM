@model VMPlainVPN
@using Dominio.EntidadesNegocio
@{
    ViewData["Title"] = "Create";
}

<h1>VPN</h1>

<h4>Crear VPN</h4>
<hr />

<div>
    <p class="text-danger">@ViewBag.error</p>
    <p class="text-success">@ViewBag.creado</p>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ip" class="control-label"></label>
                <input asp-for="Ip" class="form-control" required value=""/>
                <span asp-validation-for="Ip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" value=""/>
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" value=""/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependencia" class="control-label"></label>
                <input asp-for="Dependencia" class="form-control" value=""/>
                <span asp-validation-for="Dependencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" value=""/>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gabinete" class="control-label"></label>
                <input asp-for="Gabinete" class="form-control" value=""/>
                <span asp-validation-for="Gabinete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alta" class="control-label"></label>
                <input asp-for="Alta" class="form-control" type="date" required value=""/>
                <span asp-validation-for="Alta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Baja" class="control-label"></label>
                <input asp-for="Baja" class="form-control" type="date" value=""/>
                <span asp-validation-for="Baja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select class="form-control" name="Tipo" id="selTipo">
                    @foreach (VPN.EnumTipo tip in Enum.GetValues(typeof(VPN.EnumTipo)))
                    {
                        @if (tip.GetHashCode() != 0)
                        {
                         <option value="@tip">@tip</option>
                        }
                        
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p class="text-danger">@ViewBag.error</p>
    <p class="text-success">@ViewBag.creado</p>
</div>


<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
